<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AppUgel.Pages.MenuPage"
             Title="Menu"
             BackgroundColor="White">
    
    <VerticalStackLayout>
        <Frame BackgroundColor="#07c8f3"
       CornerRadius="0">
            <Label Text="Herramientas"
           FontSize="Large"
           TextColor="White"
           FontFamily="Rboto"
           FontAttributes="Bold"/>
        </Frame>
        <ListView ItemsSource="{Binding listaMenu}"
                  x:Name="lstMenu" ItemSelected="lstMenu_ItemSelected"
              SelectedItem="{Binding omenuCLS}">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <ImageCell ImageSource="{Binding imgMenu}"
                           Text="{Binding nomMenu}"/>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </VerticalStackLayout>
</ContentPage>